@model IEnumerable<WebApplication3.Models.PrehladTable>

@{
    ViewData["Title"] = "Home Page";
}


<h1>Login</h1>

<link rel="stylesheet" href="~/css/uctystyle.css" />
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>


<div class="col-lg-4 col-lg-offset-4" id="blocik">
    <h2>Login</h2>
    <!-- IMAGE keyface-->
    <div class="form-group">
        <label name="labeluzivatel">Uzivatelske meno</label>
        <input type="text" name="username" class="form-control" />
        <span class="help-block"></span>
    </div>
    <div class="form-group">
        <label name="labelheslo">Heslo</label>
        <input type="password" name="password" class="form-control" />
        <span class="help-block"></span>
    </div>
    <div class="form-group">
        <input type="submit" onclick="logIn()" class="btn btn-dark" value="Login" />
    </div>

</div>

<script>
    function logIn()
    {
        var uname = $('[name="username"]');
        var upass = $('[name="password"]');
        $.ajax({
            type: "POST",
            url: '@Url.Action("Login","Home")', 
            dataType: 'json',
            data: {
                login: uname.val(),
                pass: upass.val()
            },
            success: function (response) {
                if (response == "YES") {
                    window.location.href = '/Table';
                } else {
                    alert("NO");
                }
            }
        });
    }
</script>